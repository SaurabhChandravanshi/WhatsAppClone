.emptyConversation
    width: 100%;
    margin-top: 20px;
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: center;
    flex-direction: column;

.emptyConv
    max-width: 560px;
    text-align: center;
    
.emptyConvTitle
    display: inline-flex;
    font-size: 32px;
    font-weight: 300;
    justify-content: center;
    line-height: 20.5px;
    margin-top: 25px;
    color: #41525d;

.emptyConvDesc
    font-size: 14px;
    font-weight: 400;
    line-height: 20px;
    margin-top: 20px;
    color: #667781;

.emptyApp
    display: flex;
    flex-direction: row;
    column-gap: 10px;
    justify-content: center;
    color: #667781;